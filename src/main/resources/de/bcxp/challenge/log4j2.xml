<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="programming-challenge" packages="de.bcxp.challenge">
    <Appenders>
        <File name="InfoFile" fileName="logs/info.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] INFO ${sys:assemblyName} %logger{36} - %msg%n" />
        </File>

        <File name="ErrorFile" fileName="logs/error.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] ERROR ${sys:assemblyName} %logger{36} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="InfoFile" />
            <AppenderRef ref="ErrorFile" />
        </Root>
    </Loggers>
</Configuration>
